<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    android:layout_marginLeft="@dimen/layout_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:padding="15dp">
        <ImageView
            android:id="@+id/img_apex_fac"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/harshit"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_fac_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Harshit Shrivastav"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_fac_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_one"
                android:layout_marginTop="@dimen/layout_margin"
                android:textSize="15sp"
                android:paddingLeft="@dimen/layout_padding"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:padding="15dp">
        <ImageView
            android:id="@+id/img_apex_stu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/kartik"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kartik Saxena"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_stu_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_sec"
                android:paddingLeft="@dimen/layout_padding"
                android:layout_marginTop="@dimen/layout_margin"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>




